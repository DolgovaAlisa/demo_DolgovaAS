<Window x:Class="demo2._0.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:demo2._0"
        mc:Ignorable="d"
        Title="Авторизация" MinHeight="350" MinWidth="550" SizeToContent="WidthAndHeight" ResizeMode="CanResize">

    <Window.Background>
        <SolidColorBrush Color="#F0F8FF"/>
    </Window.Background>

    <Grid Margin="20"> 

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock
            Text="Авторизация"
            FontSize="24"
            FontWeight="Bold"
            Foreground="#191970"
            HorizontalAlignment="Center"
            Margin="0, 10"
            FontFamily="Cascadia Code"/>

        <StackPanel
            Grid.Row="1" VerticalAlignment="Center" Width="400" HorizontalAlignment="Center">

            <TextBlock Text="Логин" FontSize="16" Foreground="#191970" FontFamily="Cascadia Code"/>

            <TextBox x:Name="Username"
                     Margin="0, 10"
                     FontWeight="Bold"
                     Foreground="#5D3F57"
                     FontFamily="Cascadia Code"
                     Height="35"
                     FontSize="20"
                     VerticalContentAlignment="Center"
                     Background="White"
                     BorderBrush="White"/>
            <TextBlock Text="Пароль" FontSize="16" Foreground="#191970" FontFamily="Cascadia Code"/>

            <PasswordBox x:Name="Password"
                 Margin="0, 10"
                 FontWeight="Bold"
                 Foreground="#5D3F57"
                 FontFamily="Cascadia Code"
                 Height="35"
                 VerticalContentAlignment="Center"
                 FontSize="20"
                 Background="White"
                 BorderBrush="White"/>

            <Button
                Content="Войти"
                Width="150"
                Height="35"
                Background="#B0C4DE"
                Foreground="#191970"
                FontFamily="Cascadia Code"
                FontSize="18"
                FontWeight="Bold"
                BorderThickness="0"
                Cursor="Hand"
                Margin="0 15 0 0" Click="Button_Click"/>
        </StackPanel>

    </Grid>

</Window>