<Window x:Class="WpfDemoExam.ChangePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:demo2._0"
        mc:Ignorable="d"
        Title="Смена пароля" MinHeight="350" MinWidth="550" SizeToContent="WidthAndHeight" ResizeMode="CanResize" Background="#B0C4DE">


    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock
            Text="Смена пароля"
            FontSize="24"
            FontWeight="Bold"
            Foreground="#191970"
            HorizontalAlignment="Center"
            Margin="0, 10"
            FontFamily="Cascadia Code"/>

        <StackPanel
            Grid.Row="1" VerticalAlignment="Center" Width="400" HorizontalAlignment="Center">
            <TextBlock Text="Текущий пароль" FontSize="16" Foreground="Black" FontFamily="Cascadia Code"/>
            <PasswordBox x:Name="txtCurrentPassword"
                     Margin="0, 10"
                     FontWeight="Bold"
                     Foreground="#191970"
                     FontFamily="Cascadia Code"
                     Height="35"
                     FontSize="20"
                     VerticalContentAlignment="Center"
                     Background="White"
                     BorderBrush="White"/>
            <TextBlock Text="Новый пароль" FontSize="16" 
                       Foreground="Black" FontFamily="Cascadia Code"/>

            <PasswordBox x:Name="txtNewPassword"
                 Margin="0, 10"
                 FontWeight="Bold"
                 Foreground="#191970"
                 FontFamily="Cascadia Code"
                 Height="35"
                 VerticalContentAlignment="Center"
                 FontSize="20"
                 Background="White"
                 BorderBrush="White"/>
            <TextBlock Text="Повторите пароль" FontSize="16" 
                       Foreground="Black" FontFamily="Cascadia Code"/>

            <PasswordBox x:Name="txtConfirmPassword"
                 Margin="0, 10"
                 FontWeight="Bold"
                 Foreground="#191970"
                 FontFamily="Cascadia Code"
                 Height="35"
                 VerticalContentAlignment="Center"
                 FontSize="20"
                 Background="White"
                 BorderBrush="White"/>

            <Button
                Content="Сменить пароль"
                Width="180"
                Height="35"
                Background="#FFF0F0F0"
                Foreground="#191970"
                FontFamily="Cascadia Code"
                FontSize="18"
                FontWeight="Bold"
                BorderThickness="0"
                Cursor="Hand"
                Margin="0 15 0 0"
                Click="BtnChangePassword_Click"/>
        </StackPanel>
    </Grid>
</Window>