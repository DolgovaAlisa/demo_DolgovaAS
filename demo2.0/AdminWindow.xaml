<Window x:Class="demo2._0.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:demo2._0"
        mc:Ignorable="d"
        Title="Панель администратора" MinHeight="360" MinWidth="500" SizeToContent="WidthAndHeight" ResizeMode="CanResize" Background="#FFF0F0F0">

    <Grid Margin="20">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Панель Администратора"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="#191970"
                   HorizontalAlignment="Center"
                   Margin="0, 10"
                   FontFamily="Cascadia Code"/>

        <StackPanel Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Center" Width="500" Margin="0,10,0,0">
            <Button Content="Добавить Сотрудника"
                    Width="200"
                    Height="40"
                    Background="#B0C4DE"
                    BorderBrush="{x:Null}"
                    FontSize="16"
                    FontWeight="Bold"
                    HorizontalAlignment="Center"
                    Margin="10"
                    Click="OpenAddEmployeeWindow"/>

            <Button Content="Изменить Пароль"
                    Width="200"
                    Height="40"
                    Background="#B0C4DE"
                    BorderBrush="{x:Null}"
                    FontSize="16"
                    FontWeight="Bold"
                    HorizontalAlignment="Center"
                    Margin="10"
                    Click="OpenChangePasswordWindow"/>

            <Button Content="Удалить Пользователя"
                    Width="200"
                    Height="40"
                    Background="#B0C4DE"
                    BorderBrush="{x:Null}"
                    FontSize="16"
                    FontWeight="Bold"
                    HorizontalAlignment="Center"
                    Margin="10"
                    Click="DeleteUserButton_Click"/>
            <ListBox x:Name="UsersListBox"
                    BorderThickness="1"
                    BorderBrush="{x:Null}"
                    Background="#FFF0F0F0"
                    Margin="10">
            </ListBox>
        </StackPanel>
    </Grid>
</Window>
